channelGroup::channelGroup()
{
#ifdef DEBUG_REC
  cerr << "entering channelGroup::channelGroup()\n";
#endif
  num_channels=0;
  max_num_channels=MAX_CHANNELS_PER_GROUP;
  channel_list = new int[max_num_channels];
#ifdef DEBUG_REC
  cerr << "leaving channelGroup::channelGroup()\n";
#endif
}

channelGroup::~channelGroup()
{
  delete[] channel_list;
}

